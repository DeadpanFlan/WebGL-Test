doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src="https://cdnjs.cloudflare.com/ajax/libs/gl-matrix/2.3.2/gl-matrix-min.js")
		if vertex
			script(id="shader-vs" type="x-shader/x-vertex" )= vertex
		if fragment
			script(id="shader-fs" type="x-shader/x-fragment")= fragment
		script(src= pagejs)

	body(onload="start()")
		block content

